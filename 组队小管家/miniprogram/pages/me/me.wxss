page {
  height: 100%;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.all{
 height: 220rpx;
 width: 100%;
 position: fixed;
 z-index: 1;
 display: flex;
  flex-direction: column;
 justify-content:center;
 margin-top: auto;
 margin-bottom: auto;
 top:0;
 bottom: 0;
 left: 0;
 right: 0;
}

.tx{
  width: 180rpx;
  height: 180rpx;
  margin: 0 275rpx 0 275rpx;
  bottom: auto;
  border-radius: 50%;
  overflow: hidden;
  border: 20rpx solid #f3f0f0;
  background-color: #e2e4eb;
  z-index: 10;
}

.userTx{
  height: 100%;
  width: 100%;
  z-index: 11;
}
.top{
  z-index: 1;
  position: fixed;
  top:0;
  width: 100%;
  height:49%;

}
.a image{
  width: 100%;
  height: 100%;
}


.bottom{
  z-index: 1;
